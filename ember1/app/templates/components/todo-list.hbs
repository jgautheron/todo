<section class="main">
  <input class="toggle-all" type="checkbox" checked={{checked}} onclick={{action 'toggleAll'}}>
  <label for="toggle-all">Mark all as complete</label>
  <ul class="todo-list">
    {{#each items as |item|}}
      {{todo-item item=item updateItem='updateItem' removeItem='removeItem' isCompleted='isCompleted'}}
    {{/each}}
  </ul>
</section>